{{#extend "layout" title="Flatlogic One - UI Nav"}}
    {{#content "sidebar"}}
        {{> sidebar active="ui_nav"}}
    {{/content}}
    {{#content "content" mode="replace"}}
        <ol class="breadcrumb">
            <li class="breadcrumb-item">UI</li>
            <li class="breadcrumb-item active">Nav</li>
        </ol>
        <div class="row">
            <div class="col-md-6">
                <section class="widget">
                    <header>
                        <h5>
                            Base nav
                        </h5>
                        <div class="widget-controls">
                            <div class="dropdown">
                            <span data-toggle="dropdown" aria-haspopup="true" class="" aria-expanded="false">
                                <img src="../img/icons/dots.svg" alt="dropdown">
                            </span>
                                <div tabindex="-1" role="menu" aria-hidden="true" class="bg-widget-transparent dropdown-menu dropdown-menu-right" style="padding: 10px;">
                                    <button type="button" title="Reload" tabindex="0" role="menuitem" class="dropdown-item">Reload &nbsp;&nbsp;
                                        <span class="badge badge-pill badge-success animated bounceIn">
                                            <strong>9</strong>
                                        </span>
                                    </button>
                                    <button type="button" title="Full Screen" tabindex="0" role="menuitem" class="dropdown-item">Fullscreen</button>
                                    <div tabindex="-1" class="dropdown-divider"></div>
                                    <button type="button" title="Close" tabindex="0" role="menuitem" class="dropdown-item" data-widgster="close">Close</button>
                                </div>
                            </div>
                        </div>
                    </header>
                    <div class="widget-body">
                        <p>Navigation available in Bootstrap share general markup and styles,
                            from the base <code>.nav</code> class to the active and disabled states. Swap modifier classes to switch between each style.</p>
                        <div class="p-3">
                            <div class="nav-tabs">
                                <ul class="nav">
                                    <li class="nav-item">
                                        <a class="nav-link active" href="#">Active</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Link</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" href="#">Link</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link disabled" href="#">Disabled</a>
                                    </li>
                                </ul>
                            </div>

                            <pre class="bg-light border-0 text-info">
&lt;ul <span class="text-primary">class=</span><span class="text-danger">"nav"</span>&gt;
    &lt;li <span class="text-primary">class=</span><span class="text-danger">"nav-item"</span>&gt;
        &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link active"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Active</span>&lt;/a&gt;
    &lt;/li&gt;
    &lt;li <span class="text-primary">class=</span><span class="text-danger">"nav-item"</span>&gt;
        &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Link</span>&lt;/a&gt;
    &lt;/li&gt;
    &lt;li <span class="text-primary">class=</span><span class="text-danger">"nav-item"</span>&gt;
        &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Link</span>&lt;/a&gt;
    &lt;/li&gt;
    &lt;li <span class="text-primary">class=</span><span class="text-danger">"nav-item"</span>&gt;
        &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link disables"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Disabled</span>&lt;/a&gt;
    &lt;/li&gt;
&lt;/ul&gt;</pre>
                        </div>
                        <p class="mt-md">Classes are used throughout, so your markup can be super flexible. Use <code>&lt;ul&gt;</code>s like
                            above, or roll your own with say a <code>&lt;nav&gt;</code> element. Because the .nav uses display: flex,
                            the nav links behave the same as nav items would, but without the extra markup.</p>
                        <pre class="bg-light border-0 text-info">
&lt;nav <span class="text-primary">class=</span><span class="text-danger">"nav"</span>&gt;
    &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link active"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Active</span>&lt;/a&gt;
    &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Link</span>&lt;/a&gt;
    &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Link</span>&lt;/a&gt;
    &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link disables"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Disabled</span>&lt;/a&gt;
&lt;/nav&gt;</pre>
                    </div>
                </section>
            </div>
            <div class="col-md-6">
                <section class="widget">
                    <header>
                        <h5>Tabs & Pills</h5>
                        <div class="widget-controls">
                            <div class="dropdown">
                            <span data-toggle="dropdown" aria-haspopup="true" class="" aria-expanded="false">
                                <img src="../img/icons/dots.svg" alt="dropdown">
                            </span>
                                <div tabindex="-1" role="menu" aria-hidden="true" class="bg-widget-transparent dropdown-menu dropdown-menu-right" style="padding: 10px;">
                                    <button type="button" title="Reload" tabindex="0" role="menuitem" class="dropdown-item">Reload &nbsp;&nbsp;
                                        <span class="badge badge-pill badge-success animated bounceIn">
                                            <strong>9</strong>
                                        </span>
                                    </button>
                                    <button type="button" title="Full Screen" tabindex="0" role="menuitem" class="dropdown-item">Fullscreen</button>
                                    <div tabindex="-1" class="dropdown-divider"></div>
                                    <button type="button" title="Close" tabindex="0" role="menuitem" class="dropdown-item" data-widgster="close">Close</button>
                                </div>
                            </div>
                        </div>
                    </header>
                    <div class="widget-body">
                        <p>Takes the basic nav from above and adds the <code>.nav-tabs</code> class to generate a tabbed interface. Use
                            them to create tabbable regions with our tab JavaScript plugin.</p>
                        <div class="p-3">
                            <nav class="nav nav-tabs">
                                <a class="nav-link active" href="#">Active</a>
                                <a class="nav-link" href="#">Link</a>
                                <a class="nav-link" href="#">Link</a>
                                <a class="nav-link disabled" href="#">Disabled</a>
                            </nav>
                        <pre class="bg-light border-0 text-info">
&lt;nav <span class="text-primary">class=</span><span class="text-danger">"nav"</span>&gt;
  &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link active"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Active</span>&lt;/a&gt;
  &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Link</span>&lt;/a&gt;
  &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Link</span>&lt;/a&gt;
  &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link disables"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Disabled</span>&lt;/a&gt;
&lt;/nav&gt;</pre>
                        </div>
                        <p class="mt-md">Take that same HTML, but use <code>.nav-pills</code> instead:</p>
                        <div class="p-3">
                            <nav class="nav nav-pills mb-2">
                                    <a class="nav-link active" href="#">Active</a>
                                    <a class="nav-link" href="#">Link</a>
                                    <a class="nav-link" href="#">Link</a>
                                    <a class="nav-link disabled" href="#">Disabled</a>
                            </nav>
                            <pre class="bg-light border-0 text-info">
&lt;nav <span class="text-primary">class=</span><span class="text-danger">"nav nav-pills"</span>&gt;
  &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link active"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Active</span>&lt;/a&gt;
  &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Link</span>&lt;/a&gt;
  &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Link</span>&lt;/a&gt;
  &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link disables"</span> <span class="text-primary">href=</span><span class="text-danger">"#"</span>&gt;<span class="text-dark">Disabled</span>&lt;/a&gt;
&lt;/nav&gt;</pre>
                        </div>
                    </div>
                </section>
            </div>
            <div class="col-md-12">
                <section class="widget">
                    <header>
                        <h5>Nav with dropdowns</h5>
                        <div class="widget-controls">
                            <div class="dropdown">
                        <span data-toggle="dropdown" aria-haspopup="true" class="" aria-expanded="false">
                            <img src="../img/icons/dots.svg" alt="dropdown">
                        </span>
                                <div tabindex="-1" role="menu" aria-hidden="true" class="bg-widget-transparent dropdown-menu dropdown-menu-right" style="padding: 10px;">
                                    <button type="button" title="Reload" tabindex="0" role="menuitem" class="dropdown-item">Reload &nbsp;&nbsp;
                                        <span class="badge badge-pill badge-success animated bounceIn">
                                    <strong>9</strong>
                                </span>
                                    </button>
                                    <button type="button" title="Full Screen" tabindex="0" role="menuitem" class="dropdown-item">Fullscreen</button>
                                    <div tabindex="-1" class="dropdown-divider"></div>
                                    <button type="button" title="Close" tabindex="0" role="menuitem" class="dropdown-item" data-widgster="close">Close</button>
                                </div>
                            </div>
                        </div>
                    </header>
                    <div class="widget-body">
                        <p>Takes the basic nav from above and adds the <code>.nav-tabs</code> class to generate a tabbed interface. Use
                            them to create tabbable regions with our tab JavaScript plugin.</p>
                        <div class="p-3">
                            <ul class="nav nav-pills mb-2">
                                <li class="nav-item">
                                    <a class="nav-link active" href="#">Active</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="#">Action</a>
                                        <a class="dropdown-item" href="#">Another action</a>
                                        <a class="dropdown-item" href="#">Something else here</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#">Separated link</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Link</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link disabled" href="#">Disabled</a>
                                </li>
                            </ul>
                        <pre class="bg-light border-0 text-info">&lt;ul <span class="text-primary">class=</span><span class="text-danger">"nav nav-pills"</span>&gt;
    &lt;li <span class="text-primary">class=</span><span class="text-danger">"nav-item"</span>&gt;
        &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link active"</span> href="#"><span class="text-dark">Active</span>&lt;/a&gt;
    &lt;/li&gt;
    &lt;li <span class="text-primary">class=</span><span class="text-danger">"nav-item dropdown"</span>&gt;
        &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link dropdown-toggle"</span> data-toggle=<span class="text-danger">"dropdown"</span> href=<span class="text-danger">"#"</span> role=<span class="text-danger">"button"</span> aria-haspopup=<span class="text-danger">"true"</span> aria-expanded=<span class="text-danger">"false"</span>&gt;<span class="text-dark">Dropdown</span>&lt;/a&gt;
        &lt;div <span class="text-primary">class=</span><span class="text-danger">"dropdown-menu"</span>&gt;
            &lt;a <span class="text-primary">class=</span><span class="text-danger">"dropdown-item"</span> href=<span class="text-danger">"#"</span>&gt;<span class="text-dark">Action</span>&lt;/a&gt;
            &lt;a <span class="text-primary">class=</span><span class="text-danger">"dropdown-item"</span> href=<span class="text-danger">"#"</span>&gt;<span class="text-dark">Another action</span>&lt;/a&gt;
            &lt;a <span class="text-primary">class=</span><span class="text-danger">"dropdown-item"</span> href=<span class="text-danger">"#"</span>&gt;<span class="text-dark">Something else here</span>&lt;/a&gt;
            &lt;div <span class="text-primary">class=</span><span class="text-danger">"dropdown-item"</span>&gt;&lt;/div&gt;
            &lt;a <span class="text-primary">class=</span><span class="text-danger">"dropdown-item"</span> href=<span class="text-danger">"#"</span>&gt;<span class="text-dark">Separated link</span>&lt;/a&gt;
        &lt;/div&gt;
    &lt;/li&gt;
    &lt;li <span class="text-primary">class=</span><span class="text-danger">"nav-item"</span>&gt;
        &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link"</span> href=<span class="text-danger">"#"</span>><span class="text-dark">Link</span>&lt;/a&gt;
    &lt;/li&gt;
    &lt;li <span class="text-primary">class=</span><span class="text-danger">"nav-item"</span>&gt;
        &lt;a <span class="text-primary">class=</span><span class="text-danger">"nav-link disabled"</span> href=<span class="text-danger">"#"</span>&gt;<span class="text-dark">Disabled</span>&lt;/a&gt;
    &lt;li&gt;
&lt;/ul&gt;</pre>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    {{/content}}
    {{#content "scripts"}}
        <script src="../js/components/ui-nav.js"></script>
    {{/content}}
{{/extend}}
