{{#extend "layout" title="Flatlogic One Bootstrap - Email"}}
  {{#content "sidebar"}}
    {{> sidebar active="email"}}
  {{/content}}
  {{#content "content" mode="replace"}}
    <h1 class="page-title">Email - Inbox</h1>
    <div class="row">
        <div class="col-lg-3 col-xl-2">
            <div class="widget px-0 pb-1">
                <div class="widget-body">
                    <div class="d-flex justify-content-center">
                        <a class="btn btn-warning btn-lg btn-block w-75 mb-3" id="compose-btn" href="../other/compose.html">Compose</a>
                    </div>
                    <ul class="nav flex-column nav-pills nav-stacked nav-email-folders mt" id="folders-list">
                        <li class="nav-item active">
                            <a class="nav-link" href="../other/inbox.html">
                                <p class="m-0">Inbox</p>
                                <span class="badge badge-pill badge-primary">2</span>
                            </a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="#">Starred</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Sent Mail</a></li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">
